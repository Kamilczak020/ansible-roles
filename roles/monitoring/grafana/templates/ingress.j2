apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ingress-grafana
  namespace: {{ monitoring_namespace }}
  annotations:
    kubernetes.io/ingress.class: "nginx"
    nginx.ingress.kubernetes.io/rewrite-target: /$2
spec:
  rules:
  - host: personal.omnireborn.io
    http:
      paths:
      - path: /grafana(/|$)(.*)
        backend:
          serviceName: grafana
          servicePort: 3000